[
  // NAVIGATION
  {
    "command": "workbench.action.navigateLeft",
    "key": "ctrl-h"
  },
  {
    "command": "workbench.action.navigateRight",
    "key": "ctrl-l"
  },
  {
    "command": "workbench.action.navigateUp",
    "key": "ctrl-k"
  },
  {
    "command": "workbench.action.navigateDown",
    "key": "ctrl-j"
  },
  {
    "command": "workbench.action.openRecent",
    "key": "ctrl-shift-r"
  },
  // CODING
  {
    "command": "editor.action.codeAction",
    "key": "space c a",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "command": "editor.action.rename",
    "key": "space c r",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "command": "workbench.action.gotoSymbol",
    "key": "space c s",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "command": "editor.action.addSelectionToNextFindMatch",
    "key": "ctrl-n",
    "when": "(vim.mode == 'Normal' || vim.mode == 'Visual') && (editorTextFocus || !inputFocus)"
  },
  // BUFFER
  {
    "key": "alt+right",
    "command": "workbench.action.nextEditor",
    "when": "vim.mode == 'Normal' && (editorTextFocus || !inputFocus)"
  },
  {
    "key": "alt+left",
    "command": "workbench.action.previousEditor",
    "when": "vim.mode == 'Normal' && (editorTextFocus || !inputFocus)"
  },
  {
    "command": "workbench.action.showAllEditors",
    "key": "space ,",
    "when": "vim.mode == 'Normal' && (editorTextFocus || !inputFocus)"
  },
  {
    "command": "workbench.action.closeEditorsInGroup",
    "key": "space b d",
    "when": "(vim.mode == 'Normal' && editorTextFocus) || !inputFocus"
  },
  {
    "command": "workbench.action.showAllEditors",
    "key": "space b b",
    "when": "vim.mode == 'Normal' && (editorTextFocus || !inputFocus)"
  },
  {
    "command": "workbench.action.quickOpen",
    "key": "space space",
    "when": "vim.mode == 'Normal' && (editorTextFocus || !inputFocus)"
  },

  // File Explorer
  {
    "command": "renameFile",
    "key": "r",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "command": "filesExplorer.copy",
    "key": "c",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "command": "filesExplorer.paste",
    "key": "p",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "command": "filesExplorer.cut",
    "key": "x",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "command": "deleteFile",
    "key": "d",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "command": "explorer.newFile",
    "key": "a",
    "when": "filesExplorerFocus && foldersViewVisible  && !explorerResourceReadonly && !inputFocus"
  },
  {
    "command": "explorer.newFolder",
    "key": "shift-a",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "command": "explorer.openAndPassFocus",
    "key": "enter",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceIsFolder && !inputFocus"
  },
  {
    "command": "list.toggleExpand",
    "key": "enter",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && explorerResourceIsFolder && !inputFocus"
  },

  // TOGGLE
  {
    "key": "alt+t",
    "command":"workbench.action.terminal.toggleTerminal",
  },
  {
    "command": "workbench.action.toggleAuxiliaryBar",
    "key": "ctrl+g"
  },
  {
    "command": "workbench.action.toggleSidebarVisibility",
    "key": "ctrl+b"
  },
  {
    "key": "alt+f",
    "command": "workbench.action.findInFiles",
    "when": "!sideBarVisible || (sideBarVisible && !activeViewlet == 'workbench.view.search')"
  },
  {
    "key": "alt+f",
    "command": "workbench.action.toggleSidebarVisibility",
    "when": "sideBarVisible && activeViewlet == 'workbench.view.search'"
  },
  {
    "key": "alt+s",
    "command": "remoteTargets.focus",
    "when": "!sideBarVisible || (sideBarVisible && !activeViewlet == 'workbench.view.remote')"
  },
  {
    "key": "alt+s",
    "command": "workbench.action.toggleSidebarVisibility",
    "when": "sideBarVisible && activeViewlet == 'workbench.view.remote'"
  },
  {
    "key": "alt+x",
    "command": "workbench.view.extensions",
    "when": "!sideBarVisible || (sideBarVisible && !activeViewlet == 'workbench.view.extensions')"
  },
  {
    "key": "alt+x",
    "command": "workbench.action.toggleSidebarVisibility",
    "when": "sideBarVisible && activeViewlet == 'workbench.view.extensions'"
  },
  {
    "key": "alt+e",
    "command": "workbench.view.explorer",
    "when": "!sideBarVisible || (sideBarVisible && !activeViewlet == 'workbench.view.explorer')"
  },
  {
    "key": "alt+e",
    "command": "workbench.action.toggleSidebarVisibility",
    "when": "sideBarVisible && activeViewlet == 'workbench.view.explorer'"
  },
  {
    "key": "alt+g",
    "command": "workbench.view.scm",
    "when": "!sideBarVisible || (sideBarVisible && !activeViewlet == 'workbench.view.scm')"
  },
  {
    "key": "alt+g",
    "command": "workbench.action.toggleSidebarVisibility",
    "when": "sideBarVisible && activeViewlet == 'workbench.view.scm'"
  }
]
